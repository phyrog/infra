h2= @torrent.name

ul.right.button-group
  li= link_to 'Edit', edit_torrent_path(@torrent), class: "small button"
  li= link_to "Download Torrent", @torrent.file.personalize.url, target: "_blank", class: "small button" if @torrent.file

dl.tabs(data-tab)
  dd.active
    a href="#description" Description
  dd
    a href="#filelist" Files
  dd
    a href="#comments" Comments
.tabs-content
  .content.active#description
    .row
      .large-8.columns
        #description_text= simple_format @torrent.description
      .large-4.columns
        table style="width: 100%"
          tr
            th Size
            td= @torrent.formatted_size
          tr
            th Files
            td= @torrent.no_files
          tr
            th Uploaded
            td 
              time datetime="#{@torrent.created_at.to_time.iso8601}" #{@torrent.created_at}
          tr
            th Seeders
            td
          tr
            th Leechers
            td
          - @torrent.properties.uniq.each do |prop|
            - if val = @torrent.value_of_property(prop) and val.to_s != ""
              tr
                th= prop
                td= val.to_s + prop.postfix.to_s
  .content#filelist= formatted_file_list(@torrent)

